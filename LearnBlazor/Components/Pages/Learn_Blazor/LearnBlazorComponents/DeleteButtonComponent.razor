<input onclick="@(()=>DeleteUpdated(ProductId))" type="button" class="btn btn-danger" style="width:100px" value="Delete - @ProductId" />

@code {
    [Parameter]
    public int ProductId { get; set;}

    [Parameter]
    public EventCallback<int> OnDeleted { get; set; } //มาจากแม่

    private async Task DeleteUpdated(int id) //ลูก
    {
        await OnDeleted.InvokeAsync(id); //เรียกยาย
    }

}
